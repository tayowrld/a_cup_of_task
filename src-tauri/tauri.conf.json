{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "a_cup_of_tasks",
  "version": "0.5.0",
  "identifier": "ru.sai-mori.a-cup-of-tasks",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "A Cup of Tasks",
        "width": 1000,
        "height": 800,
        "minWidth": 960,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "targets": ["deb", "appimage"]
  }
}
